<%- include("partials/head.ejs") %>
    <%- include("partials/nav.ejs") %>
        <main class="mx-auto flex h-10/12 w-full items-center justify-center absolute top-20 bg-gray-700 text-white">
            <section class="flex w-[30rem] flex-col space-y-10">
                <div class="text-center text-4xl font-medium">Add Product</div>
                <form action="/addproducts" method="post" id="add-form"  class="flex w-[30rem] flex-col space-y-10">
                    <div
                        class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                        <input type="text" placeholder="Name" name="name"required
                            class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" />
                    </div>

                    <div
                        class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                        <input type="text" placeholder="price" name="price" required
                            class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" />
                    </div>

                    <div
                        class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                        <input type="text" placeholder="description" name="description"required
                            class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" />
                    </div>

                    <div
                        class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                        <input type="text" placeholder="brand" name="brand" required
                            class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" />
                    </div>
                    <button
                        class="transform rounded-sm bg-indigo-600 py-2 font-bold duration-300 hover:bg-indigo-400">Submit</button>
                </form>

            </section>
        </main>

        <%- include("partials/footer.ejs") %>