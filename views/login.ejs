<%- include("partials/head.ejs") %>
<body class="body bg-white dark:bg-[#0F172A]">
  <div class="bg-black before:animate-pulse before:bg-gradient-to-b before:from-gray-900 overflow-hidden before:via-[#00FF00] before:to-gray-900 before:absolute">
    
    <div id="myDIV">
      <div class="w-3/6 m-auto">
                <% if (message) { %>
                    <div class="flex items-center justify-between p-4 mb-4 rounded-lg shadow text-white
              <%= message.type == 'success' ? 'bg-green-500' : 
                  message.type == 'danger'? 'bg-red-500' :'bg-blue-500' %>">
                        <strong>
                            <%= message.message %>
                        </strong>
                        <button class="text-white hover:text-gray-200 text-xl font-bold leading-none"
                            onclick="this.parentElement.remove()" aria-label="Close">
                            &times;
                        </button>
                    </div>
                    <% } %>
            </div>
      <div class="w-[100vw] h-[100vh] px-3 sm:px-5 flex items-center justify-center absolute">
        <form 
          action="/login" 
          method="post" 
          class="w-full sm:w-1/2 lg:2/3 px-6 bg-gray-700 bg-opacity-20 bg-clip-padding backdrop-filter backdrop-blur-sm text-white z-50 py-4 rounded-lg">

          <div class="w-full flex justify-center text-white mb-2 md:mb-5 font-bold text-4xl">
            LogIn
          </div>

          <div class="mb-6">
            <label for="email" class="block mb-2 text-xs font-medium text-white">Your email</label>
            <input type="email" id="email" name="email"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-xs rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 md:p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="admin@gmail.com" required>
          </div>

          <div class="mb-6">
            <label for="password" class="block mb-2 text-xs font-medium text-white">Your password</label>
            <input type="password" id="password" name="password"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-xs rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-1.5 md:p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              required>
          </div>

          <div class="flex flex-row justify-between mb-4">
            <div class="text-white text-sm md:text-md">Forgot Password</div>
          </div>

          <button type="submit"
            class="w-full flex justify-center text-sm md:text-xl bg-gray-900 py-2 rounded-md hover:bg-[#00FF00] transition duration-300">
            LogIn
          </button>
          
        </form>
      </div>
    </div>
  </div>
</body>

<script>
  const para = document.createElement("div");
  para.className = 'flex flex-wrap gap-0.5 h-screen items-center justify-center relative';
  let el = '';
  for (let k = 0; k < 1000; k++) {
    el += '<div class="transition-colors duration-[1.5s] hover:duration-[0s] border-[#00FF00] h-[calc(5vw-2px)] w-[calc(5vw-2px)] md:h-[calc(4vw-2px)] md:w-[calc(4vw-2px)] lg:h-[calc(3vw-4px)] lg:w-[calc(3vw-4px)] bg-gray-900 hover:bg-[#00FF00]"></div>';
  }
  para.innerHTML = el;
  document.getElementById("myDIV").appendChild(para);
</script>
